#!/bin/bash

BLK='[1;30m'
RED='[0;31m'
YEL='[0;33m'
BLU='[0;34m'
CYN='[0;96m'
GRN='[0;32m'
RES='[0;0m'
BLD='[1m'
WHI='[1;37m'
LNE='[4m' 
clear

CPU=$(grep -m 1 "model name" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
CPUS=$(grep -c ^processor /proc/cpuinfo)
STEP=$(grep -m 1 "stepping" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
BOGO=$(grep -m 1 "bogomips" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
ram=$(free -m | grep Mem | awk '{ printf "" $2 " MB\n\n" }')
VER=$(uname -a)
OS=$(lsb_release -si)
DISK=$(df -h --total | grep total |awk '{ printf "" $2 "B\n\n" }')
uptime=$(</proc/uptime)
vid=$(lspci | grep VGA | cut -f5- -d ' ') 
uptime=${uptime%%.*}
bold=$(tput bold)
zile=$(( uptime/60/60/24 ))
secunde=$(( uptime%60 ))
minute=$(( uptime/60%60 ))
ore=$(( uptime/60/60%24 ))

echo -e "\033[00;34mâ–º\033[00;31m====================INFO SCRIPT BY CODEX=========================\033[00;34mâ—„"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUSER       \033[01;34mâ€º ${WHI}$USER"
if ((${EUID:-0} || "$(id -u)")); then
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDREPT      \033[01;34mâ€º ${WHI}Nu ai " 
else
   echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDREPT      \033[01;34mâ€º ${WHI}Ai "
fi
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPU NAME   \033[01;34mâ€º ${WHI}${CPU}${RES}\e[0m"             
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPUs       \033[01;34mâ€º ${WHI}${CPUS}${RES}\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mOS         \033[01;34mâ€º ${WHI}${OS}${RES}\e[0m"  
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUPTIME     \033[01;34mâ€º ${WHI}Zile \033[01;34m> \033[00;33m${zile}${RES} | ${WHI}Ore \033[01;34m> \033[00;33m${ore}${RES} | ${WHI}Minute \033[01;34m> \033[00;33m${minute}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mRAM        \033[01;34mâ€º ${WHI}${ram} \e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDISK SPACE \033[01;34mâ€º ${WHI}${DISK}\e[0m "   
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mPLACA VIDEO\033[01;34mâ€º ${WHI}${vid}\e[0m"     
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mSTEPPING   \033[01;34mâ€º ${WHI}${STEP}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mBOGOMIPS   \033[01;34mâ€º ${WHI}${BOGO}${RES}\e[0m"        
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUNAME      \033[01;34mâ€º ${WHI}${VER}${RES}\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;32mSPEED TEST (WGET) in 3 secunde . \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m 3 \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m 2 \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m 1 \e[0m"
sleep 2
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;33m Voi da WGET la SPEED TEST .  \e[0m"
sleep 2 
wget http://codex15.github.io/Site/speed.py
clear
echo -e "\033[00;34mâ–º\033[00;31m====================INFO SCRIPT BY CODEX=========================\033[00;34mâ—„"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUSER       \033[01;34mâ€º ${WHI}$USER"
if ((${EUID:-0} || "$(id -u)")); then
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDREPT      \033[01;34mâ€º ${WHI}Nu ai " 
else
   echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDREPT      \033[01;34mâ€º ${WHI}Ai "
fi
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPU NAME   \033[01;34mâ€º ${WHI}${CPU}${RES}\e[0m"             
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPUs       \033[01;34mâ€º ${WHI}${CPUS}${RES}\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mOS         \033[01;34mâ€º ${WHI}${OS}${RES}\e[0m"  
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUPTIME     \033[01;34mâ€º ${WHI}Zile \033[01;34m> \033[00;33m${zile}${RES} | ${WHI}Ore \033[01;34m> \033[00;33m${ore}${RES} | ${WHI}Minute \033[01;34m> \033[00;33m${minute}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mRAM        \033[01;34mâ€º ${WHI}${ram} \e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDISK SPACE \033[01;34mâ€º ${WHI}${DISK}\e[0m "  
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mPLACA VIDEO\033[01;34mâ€º ${WHI}${vid}\e[0m"        
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mSTEPPING   \033[01;34mâ€º ${WHI}${STEP}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mBOGOMIPS   \033[01;34mâ€º ${WHI}${BOGO}${RES}\e[0m"        
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUNAME      \033[01;34mâ€º ${WHI}${VER}${RES}\e[0m"
