#!/bin/bash

BLK='[1;30m'
RED='[0;31m'
YEL='[0;33m'
BLU='[0;34m'
CYN='[0;96m'
GRN='[0;32m'
RES='[0;0m'
BLD='[1m'
WHI='[1;37m'
LNE='[4m' 
clear

CPU=$(grep -m 1 "model name" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
CPUS=$(grep -c ^processor /proc/cpuinfo)
STEP=$(grep -m 1 "stepping" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
BOGO=$(grep -m 1 "bogomips" /proc/cpuinfo | cut -d: -f2 | sed -e 's/^ *//' | sed -e 's/$//')
ram=$(free -m | grep -oP '\d+' | head -n 1)
VER=$(uname -a)
OS=$(lsb_release -si)
uptime=$(</proc/uptime)
uptime=${uptime%%.*}
bold=$(tput bold)
zile=$(( uptime/60/60/24 ))
secunde=$(( uptime%60 ))
minute=$(( uptime/60%60 ))
ore=$(( uptime/60/60%24 ))

echo -e "\033[00;34mâ–º\033[00;31mâ‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡\033[00;34mâ—„"
echo -e "\033[00;34mâ–  \033[00;34mINFO SCRIPT BY CODEX | [!] All rights reserved [!] â–  \e[0m "

echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPU        \033[01;34mâ€º ${WHI}${CPU}${RES}\e[0m"             
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPUs       \033[01;34mâ€º ${WHI}${CPUS}${RES}\e[0m"            
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mSTEPPING   \033[01;34mâ€º ${WHI}${STEP}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mOS         \033[01;34mâ€º ${WHI}${OS}${RES}\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mRAM        \033[01;34mâ€º ${WHI}${ram}MB  [1024MB = 1GB]\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mBOGOMIPS   \033[01;34mâ€º ${WHI}${BOGO}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUPTIME     \033[01;34mâ€º ${WHI}Zile \033[01;34m> \033[00;31m${zile}${RES} | ${WHI}Ore \033[01;34m> \033[00;31m${ore}${RES} | ${WHI}Minute \033[01;34m> \033[00;31m${minute}${RES}\e[0m"        
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUNAME      \033[01;34mâ€º ${WHI}${VER}${RES}\e[0m"

if ((${EUID:-0} || "$(id -u)")); then
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDrept \033[01;34mâ€º ${WHI}Nu ai " 
else
   echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDrept \033[01;34mâ€º ${WHI}Ai "
fi
echo -e "\033[00;34mâ–º\033[00;31mâ‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡\033[00;34mâ—„"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;32mSpeed Test (WGET) in 3 secunde . \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m3 \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m2 \e[0m"
sleep 1
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96m1 \e[0m"
sleep 2
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;33m Voi da WGET la SPEED TEST .  \e[0m"
sleep 2 
wget http://arhivecodex.tk/speed.py
clear
echo -e "\033[00;34mâ–º\033[00;31mâ‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡â‰¡\033[00;34mâ—„"
echo -e "\033[00;34mâ–  \033[00;34mINFO SCRIPT BY CODEX | [!] All rights reserved [!] â–  \e[0m "

echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPU        \033[01;34mâ€º ${WHI}${CPU}${RES}\e[0m"             
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mCPUs       \033[01;34mâ€º ${WHI}${CPUS}${RES}\e[0m"            
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mSTEPPING   \033[01;34mâ€º ${WHI}${STEP}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mOS         \033[01;34mâ€º ${WHI}${OS}${RES}\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mRAM        \033[01;34mâ€º ${WHI}${ram}MB  [1024MB = 1GB]\e[0m"
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mBOGOMIPS   \033[01;34mâ€º ${WHI}${BOGO}${RES}\e[0m" 
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUPTIME     \033[01;34mâ€º ${WHI}Zile \033[01;34m> \033[00;31m${zile}${RES} | ${WHI}Ore \033[01;34m> \033[00;31m${ore}${RES} | ${WHI}Minute \033[01;34m> \033[00;31m${minute}${RES}\e[0m"        
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mUNAME      \033[01;34mâ€º ${WHI}${VER}${RES}\e[0m"

if ((${EUID:-0} || "$(id -u)")); then
echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDrept \033[01;34mâ€º ${WHI}Nu ai " 
else
   echo -e "\033[01;34m[\033[01;31mâ‚ª\033[01;34m]\033[01;35mâ–º \033[00;96mDrept \033[01;34mâ€º ${WHI}Ai "
